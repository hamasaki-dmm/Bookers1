<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

<% @lists.each do |list| %>
<tr>
  <td><%= list.title %></td>
  <td><%= list.body %></td>
<td><%= link_to "show", book_path(list.id) %></td>
</tr>
<% end %>
  
</table>
<h1>New books</h1>
<!-- form_with部分 -->
<%= form_with model: @list, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'create book' %>
<% end %>
